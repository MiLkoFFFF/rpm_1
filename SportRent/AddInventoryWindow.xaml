<Window x:Class="SportRent.Views.AddInventoryWindow"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление инвентаря" Height="450" Width="400">
    <Grid Margin="0,0,0,-86">
        <StackPanel Margin="10">
            <Label Content="Тип инвентаря" Margin="5"/>
            <TextBox x:Name="TypeBox" Margin="5"/>

            <Label Content="Название" Margin="5"/>
            <TextBox x:Name="NameBox" Margin="5"/>

            <Label Content="Описание" Margin="5"/>
            <TextBox x:Name="DescriptionBox" Margin="5"/>

            <Label Content="Размер" Margin="5"/>
            <TextBox x:Name="SizeBox" Margin="5"/>

            <Label Content="Цена" Margin="5"/>
            <TextBox x:Name="PriceBox" Margin="5"/>

            <CheckBox x:Name="AvailableCheckBox" Content="В наличии" Margin="5"/>
            <CheckBox x:Name="DiscountCheckBox" Content="Скидка" Margin="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button Content="Добавить" Click="AddInventory_Click" Width="100" Margin="5"/>
                <Button Content="Назад" Click="Back_Click" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
