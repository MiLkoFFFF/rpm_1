<Window x:Class="SportRent.Views.BookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Бронирование инвентаря" Height="400" Width="600">
    <Grid>
        <StackPanel>
            <ComboBox x:Name="InventoryComboBox" Width="250" Margin="10"/>
            <DatePicker x:Name="BookingDatePicker" Margin="10"/>
            <TextBox x:Name="HoursBox" Width="50" Margin="10" PreviewTextInput="HoursBox_PreviewTextInput"/>
            <Button Content="Забронировать" Width="150" Click="BookItem_Click"/>
            <Label x:Name="ResultLabel" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
